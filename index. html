<body>
  <div class="container">
    <h1>YouTube Thumbnail Downloader</h1>
    <input type="text" id="videoUrl" placeholder="Enter YouTube Video URL">
    <button id="fetchThumbnail">Fetch Thumbnail</button>
    <div id="thumbnailPreview"></div>
    <div id="downloadOptions" class="hidden">
      <h2>Download Options</h2>
      <button id="downloadMax">Download Max Resolution</button>
      <button id="downloadHD">Download HD</button>
      <button id="downloadSD">Download SD</button>
    </div>
  </div>

  <script>
    document.getElementById('fetchThumbnail').addEventListener('click', () => {
      const videoUrl = document.getElementById('videoUrl').value;
      const videoId = extractVideoId(videoUrl);

      if (!videoId) {
        alert('Invalid YouTube URL');
        return;
      }

      const thumbnailUrls = getThumbnailUrls(videoId);
      displayThumbnail(thumbnailUrls.maxres);
      showDownloadOptions(thumbnailUrls);
    });

    function extractVideoId(url) {
      const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
      const match = url.match(regExp);
      return (match && match[2].length === 11) ? match[2] : null;
    }

    function getThumbnailUrls(videoId) {
      return {
        maxres: `https://img.youtube.com/vi/${videoId}/maxresdefault.jpg`,
        hd: `https://img.youtube.com/vi/${videoId}/hqdefault.jpg`,
        sd: `https://img.youtube.com/vi/${videoId}/sddefault.jpg`,
      };
    }

    function displayThumbnail(url) {
      const thumbnailPreview = document.getElementById('thumbnailPreview');
      thumbnailPreview.innerHTML = `<img src="${url}" alt="YouTube Thumbnail">`;
    }

    function showDownloadOptions(thumbnailUrls) {
      const downloadOptions = document.getElementById('downloadOptions');
      downloadOptions.classList.remove('hidden');

      document.getElementById('downloadMax').onclick = () => downloadImage(thumbnailUrls.maxres);
      document.getElementById('downloadHD').onclick = () => downloadImage(thumbnailUrls.hd);
      document.getElementById('downloadSD').onclick = () => downloadImage(thumbnailUrls.sd);
    }

    function downloadImage(url) {
      const link = document.createElement('a');
      link.href = url;
      link.download = 'thumbnail.jpg';
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
    }
  </script>
</body>
